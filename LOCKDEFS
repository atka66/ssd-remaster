//
// Sonic Locks
//
ClearLocks

Lock 1 Doom                      // red
{
	RedCard
	Message "$PD_REDC"
	RemoteMessage "$PD_REDC"
	Mapcolor 255 0 0
}


Lock 2 Doom                      // blue
{
	BlueCard
	Message "$PD_BLUEC"
	RemoteMessage "$PD_BLUEC"
	Mapcolor 0 0 255
}


Lock 3 Doom                      // yellow
{
	YellowCard
	Message "$PD_YELLOWC"
	RemoteMessage "$PD_YELLOWC"
	Mapcolor 255 255 0
}


Lock 4 Doom                      // purple
{
	PurpleCard
	Message "$PD_REDS"
	RemoteMessage "$PD_REDS"
	Mapcolor 255 0 255
}


Lock 5 Doom                      // green
{
	GreenCard
	Message "$PD_BLUES"
	RemoteMessage "$PD_BLUES"
	Mapcolor 0 255 0
}


Lock 6 Doom                      // orange
{
	OrangeCard
	Message "$PD_YELLOWS"
	RemoteMessage "$PD_YELLOWS"
	Mapcolor 255 128 0
}

Lock 229 Doom                    // rainbow (3)
{
	Any { BlueCard GreenCard }
	Any { YellowCard OrangeCard }
	Any { RedCard PurpleCard }
	Message "$PD_ALL3"
	RemoteMessage "$PD_ALL3"
	MapColor 255 255 255
}

Lock 101 Doom                    // rainbow (6)
{
	BlueCard 
	GreenCard
	YellowCard 
	OrangeCard
	RedCard 
	PurpleCard
	Message "$PD_ALL6"
	RemoteMessage "$PD_ALL6O"
	MapColor 255 255 255
}
